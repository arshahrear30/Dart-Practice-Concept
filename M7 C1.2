/// Route
class SettingsScreen extends StatelessWidget {
  const SettingsScreen({super.key});

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('Settings'),
      ), // AppBar
      body: Center(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: [

            Text(// Settings লেখা দেখানোর জন্য
              'Settings',
              style: TextStyle(fontSize: 24),
            ), // Text



            ElevatedButton(// Settings → Home যাওয়ার বাটন
              onPressed: () {// Home স্ক্রিনে যাবে// আগের সব স্ক্রিন stack থেকে মুছে যাবে
                Navigator.pushAndRemoveUntil(
                  context,
                  MaterialPageRoute(builder: (context) => HomeScreen()),
                      (route) => false,
                );
              },
              child: Text('Home'),
            ), // ElevatedButton
          ],
        ), // Column
      ), // Center
    ); // Scaffold
  }
}




/// Route
class OrdersScreen extends StatelessWidget {
  const OrdersScreen({super.key});

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('Orders'),
      ), // AppBar
      body: Center(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: [

            Text(
              'Orders',
              style: TextStyle(fontSize: 24),
            ), // Text


            TextButton( // Orders → Settings যাওয়ার বাটন
              onPressed: () {// pushReplacement:// Orders স্ক্রিন remove হবে// Settings স্ক্রিন replace হবে
                Navigator.pushReplacement(
                  context,
                  MaterialPageRoute(
                    builder: (context) => SettingsScreen(),
                  ), // MaterialPageRoute
                );
              },
              child: Text('Go to settings'),
            ), // TextButton



            TextButton(// আগের স্ক্রিনে ফেরত যাওয়ার বাটন
              onPressed: () {
                Navigator.pop(context);
              },
              child: Text('Back to home'),
            ), // TextButton

          ],


        ), // Column
      ), // Center
    ); // Scaffold
  }
}




