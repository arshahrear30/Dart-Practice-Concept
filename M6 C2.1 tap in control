import 'package:flutter/material.dart';
void main() {
  runApp(const MyApp()); // MyApp widget রান করানো হচ্ছে
}




class MyApp extends StatelessWidget {  // Root widget (পুরো অ্যাপের মূল widget)
  const MyApp({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      debugShowCheckedModeBanner: false, // ডিবাগ ব্যানার বন্ধ
      title: 'A R Shahrear',
      home: const HomeScreen(), // প্রথম যে স্ক্রিন দেখাবে
    );
  }
}




//---- Home Screen widget ----
class HomeScreen extends StatelessWidget {
  const HomeScreen({super.key});

  @override
  Widget build(BuildContext context) {

    return Scaffold(//pura screen jeta diya niyontron kori
      backgroundColor: Colors.amberAccent,// পুরো স্ক্রিনের ব্যাকগ্রাউন্ড কালার

//=============================
      appBar: AppBar( // AppBar (উপরে থাকা বার)


        backgroundColor: Colors.indigo,
        centerTitle: true,
        title: const Text(  'Home',

          style: TextStyle(
            color: Colors.white,
            fontSize: 24,
            fontWeight: FontWeight.bold,
          ),

        ),


        leading: const Icon(  // বাম পাশে আইকন
          Icons.adb_rounded,
          color: Colors.amber,
          size: 32,
        ),


      ),
//=============================

      // স্ক্রিনের মূল অংশ
      body: Center(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,

           children: [

             GestureDetector( // কতক্ষন tap করি তা নিয়ন্তন করা যায় // সব ধরনের tap নিয়ন্তন করে
               
               
               onTap:(){
                 print('tapeed on Hello world');
               },
               
               onLongPress:(){},
               onDoubleTap:(){},
               
               child: Text('Hello world',style: TextStyle(fontSize: 32),),
               
             ),



             InkWell( // click করলে click shadow দেখা যায়


               onTap:(){
                 print('tapeed on Hello world');
               },
               
               borderRadius: BorderRadius.circular(16),
               onLongPress:(){},
               onDoubleTap:(){},
               
               child: Text('Hello world',style: TextStyle(fontSize: 32),),
               
             )




        ],
        ),

      ),
    );
  }
}
