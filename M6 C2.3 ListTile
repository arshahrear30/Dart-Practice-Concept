import 'package:flutter/material.dart';
void main() {
  runApp(const MyApp()); // MyApp widget রান করানো হচ্ছে
}




class MyApp extends StatelessWidget {  // Root widget (পুরো অ্যাপের মূল widget)
  const MyApp({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      debugShowCheckedModeBanner: false, // ডিবাগ ব্যানার বন্ধ
      title: 'A R Shahrear',
      home: const HomeScreen(), // প্রথম যে স্ক্রিন দেখাবে
    );
  }
}




//---- Home Screen widget ----
class HomeScreen extends StatelessWidget {
  const HomeScreen({super.key});

  @override
  Widget build(BuildContext context) {

    return Scaffold(//pura screen jeta diya niyontron kori
      backgroundColor: Colors.amberAccent,// পুরো স্ক্রিনের ব্যাকগ্রাউন্ড কালার

//=============================
      appBar: AppBar( // AppBar (উপরে থাকা বার)


        backgroundColor: Colors.indigo,
        centerTitle: true,
        title: const Text(  'Home',

          style: TextStyle(
            color: Colors.white,
            fontSize: 24,
            fontWeight: FontWeight.bold,
          ),

        ),


        leading: const Icon(  // বাম পাশে আইকন
          Icons.adb_rounded,
          color: Colors.amber,
          size: 32,
        ),


      ),
//=============================

      // স্ক্রিনের মূল অংশ
     body: Scrollbar(  //Scrollbar Scroll করে না । এটা Indicator //Scroll bar দেখাতে → Scrollbar + ListView । thickness লাগে child: Coloum লাগে
        thickness:20,
        radius: Radius.circular(10),
        child: ListView(

           children: [

             ListTile( // dekco ai keyword use korar shate shate auto .. space niya ney .. 3 number e kemney 2 ta logo anci dekho ..
               title: const Text('Username'),
               subtitle: const Text('user@gmail.com'),
               leading: Icon(Icons.adb_rounded),
               trailing: Icon(Icons.arrow_right_alt),

               onTap:(){
                 print('list tile pressed');

               },

             ),//ListTile

             Divider(
               height:20,
               thickness:2,
               color: Colors.black,
               endIndent: 60,//last er dike kicu jayga faka rakcay
             ),//Divider

             ListTile(
               title: const Text('Username'),
               subtitle: const Text('user@gmail.com'),
               leading: Icon(Icons.adb_rounded),
               trailing: Icon(Icons.arrow_right_alt),

               onTap:(){
                 print('list tile pressed');

               },

             ),//ListTile

             Divider(
               height:20,
               thickness:2,
               color: Colors.black,
               indent: 60,//last er dike kicu jayga faka rakcay
             ),//Divider

             ListTile(
               title: const Text('Username'),
               subtitle: const Text('user@gmail.com'),
               leading: Icon(Icons.adb_rounded),
               trailing:Column(
                 children:[
                 Icon(Icons.arrow_right_alt),
                   Icon(Icons.arrow_right_alt),
               ],
               ),

               onTap:(){
                 print('list tile pressed');

               },

             ),//ListTile

             Divider(
               height:20,
               thickness:2,
               color: Colors.black,

             ),//Divider

             ListTile(
               title: const Text('Username'),
               subtitle: const Text('user@gmail.com'),
               leading: Icon(Icons.adb_rounded),
               trailing: Icon(Icons.arrow_right_alt),

               onTap:(){
                 print('list tile pressed');

               },

             ),//ListTile



        ],
