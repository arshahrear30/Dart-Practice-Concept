import 'package:flutter/material.dart';

void main() {
  runApp(const LiveClassProject());
}

class LiveClassProject extends StatelessWidget {
  const LiveClassProject({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: HomeScreen(),

      theme: ThemeData( //global theme
        primarySwatch: Colors.blue,

        elevatedButtonTheme: ElevatedButtonThemeData(
          style: ElevatedButton.styleFrom(
            backgroundColor: Colors.greenAccent,
            foregroundColor: Colors.white,
            padding: EdgeInsets.symmetric(horizontal: 20, vertical: 16),
            shape: RoundedRectangleBorder(
              borderRadius: BorderRadius.circular(10),
            ),
            elevation: 5,
            textStyle: TextStyle(
              fontSize: 16,
              fontWeight: FontWeight.bold,
              letterSpacing: 0.6,
              wordSpacing: 0.5,
            ),
          ),
        ),

        textButtonTheme: TextButtonThemeData(
          style: TextButton.styleFrom(
            textStyle: TextStyle(
              fontSize: 16,
              fontWeight: FontWeight.w600,
            ),
          ),
        ),

        appBarTheme: AppBarTheme(
          backgroundColor: Colors.red,
          elevation: 5,
          shadowColor: Colors.green,
        ),

        textTheme: TextTheme(
          bodyMedium: TextStyle(fontSize: 10),
          bodySmall: TextStyle(fontSize: 64),
          bodyLarge: TextStyle(fontSize: 24),
        ),
      ),

      darkTheme: ThemeData(
        brightness: Brightness.dark,
        appBarTheme: AppBarTheme(
          backgroundColor: Colors.red,
          elevation: 5,
          shadowColor: Colors.white,
        ),
      ),

      themeMode: ThemeMode.dark,
    );
  }
}

class HomeScreen extends StatelessWidget {
  const HomeScreen({super.key});

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('Home'),
      ),

      body: Center(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: [
            Text(//cailay global upor theke fixed vabey akta set kortay parbo
              'Hello',
              style: Theme.of(context).textTheme.bodyMedium,
            ),
            Text(
              'Hello no',
              style: Theme.of(context).textTheme.headlineMedium,
              //by default headline nici .jeita flutter theke by default
            ),
            TextButton(
              onPressed: () {},
              child: Text('Tap Here'),
            ),
            ElevatedButton(
              onPressed: () {},
              child: Text('Tap Here'),
            ),
          ],
        ),
      ),
    );
  }
}
