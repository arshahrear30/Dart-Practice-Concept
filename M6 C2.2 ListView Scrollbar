import 'package:flutter/material.dart';
void main() {
  runApp(const MyApp()); // MyApp widget রান করানো হচ্ছে
}




class MyApp extends StatelessWidget {  // Root widget (পুরো অ্যাপের মূল widget)
  const MyApp({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      debugShowCheckedModeBanner: false, // ডিবাগ ব্যানার বন্ধ
      title: 'A R Shahrear',
      home: const HomeScreen(), // প্রথম যে স্ক্রিন দেখাবে
    );
  }
}




